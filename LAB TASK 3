      <legend>Donation Amount:</legend>
      <label><input type="radio" name="donation" value="10" /> $100</label>
      <label><input type="radio" name="donation" value="25" /> $250</label>
      <label><input type="radio" name="donation" value="50" /> $500</label>
      <div id="donationError" class="error"></div>
    </fieldset>

    <button type="submit">Donate</button>
